												{
													scale 0.15 1.4 0.15
													
													children [ USE BaseSphere ]
												}
												
												Transform
												{
													scale 0.15 0.15 1.4
													
													children [ USE BaseSphere ]
												}
											]
										}
									]
								}
							]
						}
						
						DEF LeftPropeller Transform
						{
							translation 0.0 0.0 -1.0
							
							children [ USE Propeller ]
						}
					]
				}
			]
		}
		
		
		# trup aviona
		DEF Body Transform 
		{	
			children 
			[
				# baza tijela
				DEF BodyBase Transform 
