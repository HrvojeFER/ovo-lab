{
	key [ 0, 0.5, 1 ]
	keyValue [ 0 1 0 0, 0 1 0 3.141, 0 1 0 6.282 ]
}

# timer -> interpolator -> rotacija Sunca
ROUTE SunRotationTimer.fraction_changed TO SunRotator.set_fraction
ROUTE SunRotator.value_changed TO Sun.set_rotation


